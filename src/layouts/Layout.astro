---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Beau Crisp - Strength & Conditioning Coach"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-red-500 shadow">
      <nav class="container mx-auto px-4 py-6">
        <div class="flex justify-between items-center">
          <a href="/" class="text-xl font-bold">Beau Crisp</a>
          <div class="space-x-6">
            <a href="/" class="hover:text-gray-600">Home</a>
            <a href="/blog" class="hover:text-gray-600">Blog</a>
            <a href="/workouts" class="hover:text-gray-600">Workouts</a>
            <a href="/about" class="hover:text-gray-600">About</a>
            <a href="/login" class="hover:text-gray-600">Login</a>
          </div>
        </div>
      </nav>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-gray-800 text-white mt-auto">
      <div class="container mx-auto px-4 py-6 text-center">
        <p>
          &copy; {new Date().getFullYear()} Beau Crisp. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
