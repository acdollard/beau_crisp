---
import "../styles/global.css";
import { Image } from "astro:assets";
import logo from "../assets/buried2.svg";
import AuthProvider from "../components/AuthProvider.astro";
import { supabase } from "../lib/supabase.ts";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Get the current session on the server side
const {
  data: { session },
} = await supabase.auth.getSession();

console.log(session);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Buried In The Bones" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/bone.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <header
      class="transparent absolute top-0 left-0 right-0 z-50 font-customFont text-2xl tracking-wide"
    >
      <nav class="mx-auto py-4 bg-transparent">
        <div class="flex justify-between items-center px-4">
          <a href="/"
            ><Image
              src={logo}
              alt="Beau Crisp Logo"
              height={100}
              width={200}
              class="w-32 h-16 md:w-48 md:h-24"
            /></a
          >

          <!-- Mobile menu button -->
          <button
            id="mobile-menu-button"
            class="md:hidden text-floralWhite transition-transform duration-200"
            aria-label="Toggle menu"
          >
            <svg
              class="w-8 h-8 md:w-16 md:h-16"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>

          <!-- Desktop menu -->
          <div class="hidden md:flex space-x-8">
            <a
              href="/"
              class="text-floralWhite hover:text-khaki transition-colors duration-200 text-3xl"
              >Home</a
            >
            <div class="relative group">
              <span class="text-floralWhite text-3xl cursor-default">Media</span
              >
              <div
                class="absolute left-0 mt-2 w-48 bg-stone-800 rounded-sm shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
              >
                <a
                  href="/podcast"
                  class="block px-4 py-2 text-floralWhite hover:text-khaki hover:bg-stone-700 transition-colors duration-200 text-xl"
                  >Podcast</a
                >
                <a
                  href="/writing"
                  class="block px-4 py-2 text-floralWhite hover:text-khaki hover:bg-stone-700 transition-colors duration-200 text-xl"
                  >Writing</a
                >
              </div>
            </div>
            <div class="relative group">
              <span class="text-floralWhite text-3xl cursor-default"
                >Resources</span
              >
              <div
                class="absolute left-0 mt-2 w-48 bg-stone-800 rounded-sm shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
              >
                <a
                  href="/free_resources"
                  class="block px-4 py-2 text-floralWhite hover:text-khaki hover:bg-stone-700 transition-colors duration-200 text-xl"
                  >Free PDFs</a
                >
              </div>
            </div>
            <a
              href="/about"
              class="text-floralWhite hover:text-khaki transition-colors duration-200 text-3xl"
              >About</a
            >
            <a
              href="/contact"
              class="text-floralWhite hover:text-khaki transition-colors duration-200 text-3xl"
              >Contact</a
            >
            {
              session ? (
                <form action="/api/auth/signout" method="post" class="inline">
                  <button
                    type="submit"
                    class="block text-floralWhite hover:text-khaki transition-colors duration-200 text-3xl"
                  >
                    Sign Out
                  </button>
                </form>
              ) : (
                <a
                  href="/login"
                  class="text-floralWhite hover:text-khaki transition-colors duration-200 text-3xl"
                >
                  Sign In
                </a>
              )
            }
          </div>
        </div>

        <!-- Mobile menu -->
        <div
          id="mobile-menu"
          class="hidden md:hidden mt-4 space-y-8 transform transition-all duration-300 ease-in-out bg-stone-800 px-4 py-4"
        >
          <a
            href="/"
            class="block text-floralWhite hover:text-khaki transition-colors duration-200"
            >Home</a
          >
          <a
            href="/podcast"
            class="block text-floralWhite hover:text-khaki transition-colors duration-200"
            >Podcast</a
          >
          <a
            href="/writing"
            class="block text-floralWhite hover:text-khaki transition-colors duration-200"
            >Writing</a
          >
          <a
            href="/free_resources"
            class="block text-floralWhite hover:text-khaki transition-colors duration-200"
            >Resources</a
          >
          <a
            href="/about"
            class="block text-floralWhite hover:text-khaki transition-colors duration-200"
            >About</a
          >
          <a
            href="/contact"
            class="block text-floralWhite hover:text-khaki transition-colors duration-200"
            >Contact</a
          >
          {
            session ? (
              <form action="/api/auth/signout" method="post" class="inline">
                <button
                  type="submit"
                  class="block text-floralWhite hover:text-khaki transition-colors duration-200"
                  id="logout-button"
                >
                  Sign Out
                </button>
              </form>
            ) : (
              <a
                href="/login"
                class="block text-floralWhite hover:text-khaki transition-colors duration-200"
              >
                Sign In
              </a>
            )
          }
        </div>
      </nav>
    </header>

    <main class="mx-auto bg-floralWhite">
      <slot />
    </main>

    <!-- Make session data available to client-side JavaScript -->
    <script define:vars={{ session }}>
      // Session data is now available globally
      window.sessionData = session;
    </script>
    <footer class="bg-ebony mt-auto">
      <div class="container mx-auto px-4 py-6 text-center">
        <p class="text-floralWhite">
          &copy; {new Date().getFullYear()} Buried In The Bones. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

<script>
  // Mobile menu toggle with animation
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = mobileMenuButton?.querySelector("svg");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
    mobileMenu?.classList.toggle("opacity-0");
    mobileMenu?.classList.toggle("translate-y-[-10px]");

    // Animate the hamburger icon
    menuIcon?.classList.toggle("rotate-90");
  });

  // Initialize menu state
  if (mobileMenu) {
    mobileMenu.classList.add("opacity-0", "translate-y-[-10px]");
  }
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }

  /* Add smooth transitions */
  #mobile-menu {
    transition: all 0.3s ease-in-out;
  }

  #mobile-menu:not(.hidden) {
    opacity: 1;
    transform: translateY(0);
  }

  #mobile-menu.hidden {
    opacity: 0;
    transform: translateY(-10px);
  }
</style>
