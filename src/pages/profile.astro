---
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase.ts";

// Get session server-side (middleware ensures user is authenticated)
const {
  data: { session },
} = await supabase.auth.getSession();
---

<Layout title="Profile - Beau Crisp">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-customFont text-ebony mb-8">Your Profile</h1>

    <div>
      <p class="text-gray-600 mb-4">
        Welcome back, {
          session?.user.user_metadata?.name || session?.user.email
        }!
      </p>
      <div class="bg-white shadow-lg rounded-sm p-6 max-w-md mx-auto">
        <div class="text-center mb-6">
          <div
            class="w-20 h-20 bg-khaki rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <span class="text-2xl font-customFont text-floralWhite">
              {
                (
                  session?.user.user_metadata?.name ||
                  session?.user.email ||
                  "U"
                )
                  .split(" ")
                  .map((n: string) => n[0])
                  .join("")
                  .toUpperCase()
                  .slice(0, 2)
              }
            </span>
          </div>
          <h2 class="text-2xl font-customFont text-ebony">
            {session?.user.user_metadata?.name || "User"}
          </h2>
          <p class="text-gray-600">{session?.user.email}</p>
        </div>
        <div class="space-y-4">
          <form action="/api/auth/signout" method="post">
            <button
              type="submit"
              class="w-full bg-ebony text-floralWhite hover:bg-rawUmber px-4 py-2 rounded-sm transition-colors duration-200 font-condensed"
            >
              Sign Out
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</Layout>
