---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Free Nutrition Guide - Beau Crisp">
  <section class="min-h-[60vh] pt-48 hero-image bg-center">
    <div class="flex flex-col items-end justify-center w-[80%]">
      <h1
        class="text-6xl md:text-7xl font-customFont animate-fade-in-left text-floralWhite z-10"
      >
        Download This FREE Nutrition Guide
      </h1>
      <a
        href="/nutrition.pdf"
        download
        class="inline-block bg-khaki text-floralWhite hover:bg-floralWhite hover:text-ebony px-5 py-3 md:px-7 md:py-5 rounded-sm transition-colors duration-300"
      >
        Download PDF
      </a>
    </div>
  </section>

  <div class="max-w-3xl mx-auto p-4">
    <div class="bg-white shadow-lg rounded-sm overflow-hidden">
      <iframe
        src="/nutrition.pdf"
        height="800"
        class="w-full"
        title="Free Nutrition Guide"></iframe>
    </div>
  </div>
</Layout>

<style>
  .hero-image {
    background-image: url("../assets/torso-drawing.jpeg");
    background-size: auto;
    background-repeat: repeat-x;
    background-position: center;
  }
</style>
